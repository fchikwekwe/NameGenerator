<div class="profile-page">
    <div>
        <h2>Your Names:</h2>
        <p>Choose the names you would like to save.</p>
        <form class="quiz-form" action="/tryagain" method="POST">
            <fieldset>
                <div class="row">
                    <a class="try-again btn animate" href="/">Retake Quiz</a>
                    <a class="try-again btn animate" href="/tryagain">More Names</a>
                </div>
            </fieldset>
        </form>
    </div>
    <br>
    <!-- If the user is already logged in,
    then we go straight to updating their profile -->
    {{#if currentUser}}
    <form action="/users/{{currentUser._id}}/answers?_method=PUT" method="POST">
        <fieldset>
        {{#each names}}
            <div>
                <input value="{{this}}" name="names" type="checkbox">
                <label for="{{this}}">{{this}}</label>
            </div>
        {{/each}}
        <input class="btn animate" type="submit" value="Submit">
        </fieldset>
    </form>

    {{else}}
    <!-- If they are not yet logged in,
    then we take the normal route through /answers -->
    <form action="/answers" method="POST">
        <fieldset>
        {{#each names}}
            <div>
                <input value="{{this}}" name="names" type="checkbox">
                <label for="{{this}}">{{this}}</label>
            </div>
        {{/each}}
            <input class="btn animate" type="submit" value="Submit">
        </fieldset>
    </form>
    {{/if}}
</div>
